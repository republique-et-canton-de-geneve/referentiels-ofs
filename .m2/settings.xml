<?xml version="1.0" encoding="UTF-8" ?>
<settings>
    <servers>
        <server>
            <id>central</id>
            <username>${env.Nexus_REPO_USER}</username>
            <password>${env.Nexus_REPO_PASS}</password>
        </server>
        <server>
            <id>snapshots</id>
            <username>${env.Nexus_REPO_USER}</username>
            <password>${env.Nexus_REPO_PASS}</password>
        </server>
    </servers>

    <mirrors>
        <mirror>
            <!--This sends everything else to /public -->
            <id>nexus</id>
            <mirrorOf>*</mirrorOf>
            <url>${env.Nexus_REPO_URL}/groups/public</url>
        </mirror>
    </mirrors>

	<properties>
		<maven2Repository_projet>
			***REMOVED***/content/repositories
		</maven2Repository_projet>
		<maven2Repository_lot>
			***REMOVED***/content/repositories
		</maven2Repository_lot>
		<siteRepository>
			***REMOVED***/content/sites/projects_Website
		</siteRepository>
		<projects_Website>
			dav:***REMOVED***/content/sites/projects_Website
		</projects_Website> 
	</properties>

    <profiles>
        <profile>
            <id>nexus</id>
            <!--Enable snapshots for the built in central repo to direct -->
            <!--all requests to nexus via the mirror -->
            <repositories>
                <repository>
                    <id>central</id>
                    <url>http://central</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>central</id>
                    <url>http://central</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
    <activeProfiles>
        <!--make the profile active all the time -->
        <activeProfile>nexus</activeProfile>
    </activeProfiles>
</settings>

