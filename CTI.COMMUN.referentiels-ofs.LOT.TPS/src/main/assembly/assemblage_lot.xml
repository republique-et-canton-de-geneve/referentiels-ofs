<assembly>

	<id>assemblage_lot_tp_simple</id>

	<formats>
		<format>zip</format>
	</formats>

	<includeBaseDirectory>true</includeBaseDirectory>

	<files>
		<file>
			<source>src/main/assembly/lisez_moi.txt</source>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/main/assembly/DossierExploitation.doc</source>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>src/main/assembly</directory>
			<includes>
				<include>README*</include>
				<include>LICENSE*</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/server-resources</directory>
			<includes>
				<include>**/*.*</include>
			</includes>
			<outputDirectory>/server</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/server-resources</directory>
			<includes>
				<include>**/*.*</include>
			</includes>
			<outputDirectory>/server</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/scripts-resources</directory>
			<includes>
				<include>**/*.sql</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target</directory>
			<outputDirectory>/lib</outputDirectory>
			<includes>
				<include>*.ear</include>
			</includes>
		</fileSet>
	</fileSets>	

	<dependencySets>
		<dependencySet>
			<unpack>false</unpack>
			<outputDirectory>/lib</outputDirectory>
		</dependencySet>
	</dependencySets>

</assembly>
